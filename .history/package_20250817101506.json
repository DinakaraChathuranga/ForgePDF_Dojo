{
  "name": "pdf-dojo",
  "version": "1.0.0",
  "description": "A portable desktop PDF utility tool.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "PDF",
    "Toolkit",
    "Electron",
    "Python"
  ],
  "author": "Dinakara Chathuranga",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "python-shell": "^5.0.0",
    "sweetalert2": "^11.10.1"
  },
  "build": {
    "appId": "com.ForgeAntropi.pdftoolkit",
    "productName": "PDF Dojo",
    "icon": "frontend/assets/logo.png",
    
    "files": [
      "**/*",
      "!dist/",
      "!config/"
    ],
     "asarUnpack": [
    "./backend/**"
  ],
  
    "extraResources": [
      {
        "from": "./backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "frontend/assets/logo.png"
    }
  }
}
